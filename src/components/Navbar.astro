<div class="flex justify-center ">
    <div class="w-[900px] mx-4 relative">
        <nav class="pt-8 sm:pt-12 hidden sm:flex gap-x-4 justify-start text-slate-400 text-base sm:text-lg font-mono font-semibold">
            <a class="hover:text-lime-400" href="/">home</a>
            <div class="border border-slate-400 mt-2 h-[15px] border-r"></div>
            <a class="hover:text-lime-400" href="/about">work</a>
